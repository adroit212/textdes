<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="textdes.ephraim.com.textdes.MessageDetailsActivity"
    android:padding="20dp"
    android:background="@drawable/app_back">

    <TextView
        android:layout_alignParentTop="true"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message Details"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/md_main_layer"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sender:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/md_sender_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receiever:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/md_receiver_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/md_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/md_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/md_dec_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Decrypt and Read"
            android:textColor="#fff"
            android:textSize="20sp"
            android:background="@color/colorPrimaryDark"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"/>
    </LinearLayout>

</RelativeLayout>
